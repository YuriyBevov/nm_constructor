mixin feature-card(data)
  .feature-card(class= data.cls ? data.cls : null style= data.bg ? `background-image: url('./assets/img/${data.bg}.png')` : null)
    .feature-card__content
      if data.icon
        svg(width='32' height='32' role='img' aria-hidden='true' focusable='false')
          use(xlink:href='./assets/sprite.svg#icon-feature')
      span.base-subtitle!= data.title
      span.base-text!= data.text
