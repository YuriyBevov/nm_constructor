block variables
  - sectionClass = ''
  - sectionContainerClass = ''
  - sectionTitle = ''
  - sectionText  = ''

section.base-section(class= sectionClass)
  .container(class= sectionContainerClass)
    if hideSectionHeader != true
      .base-section__header
        h2.base-section__header-title!= sectionTitle
        if sectionText
          span.base-section__header-text!= sectionText
    block content

